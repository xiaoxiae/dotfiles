source ~/.mutt/dracula.muttrc  # theme
source "gpg -d ~/.mutt/password.gpg |"  # passwords

set editor='vim'

# Credentials
set from = "tomas@slama.dev" 
set realname = "Tomáš Sláma" 

# IMAP settings
set imap_user = "tomas@slama.dev" 
set folder = "imaps://imap-220316.m16.wedos.net:993/" 

# Mailbox settings
set spoolfile = "+INBOX" 
set postponed ="+Drafts" 
set trash = "+Trash" 
set record = "+Sent" 
mailboxes =INBOX =Sent =Trash =Drafts

# SMTP settings
set smtp_url = "smtps://tomas@slama.dev@smtp-220316.m16.wedos.net:465/"

# Cache and certificates
set header_cache =~/.mutt/cache/headers 
set message_cachedir =~/.mutt/cache/bodies 
set certificate_file =~/.mutt/certificates

# Aliases
set alias_file =~/.mutt/aliases
set sort_alias = alias
set reverse_alias = yes
source $alias_file

# Convenience settings
set move = no
set imap_keepalive = 900 
set timeout=30

# Sidebar settings
set sidebar_visible = yes
set sidebar_width = 15

bind index,pager K sidebar-prev
bind index,pager J sidebar-next
bind index,pager O sidebar-open

# Sort by newest first
set sort = reverse-threads 
set sort_aux = last-date-received
