[alias]
	# diff commands
	d = diff
	db = diff -b

	# status commands
	s = status
	t = log --decorate --all --graph
	
	# The Holy Trinity
	a = add
	c = commit -m
	ca = commit --amend -m
	p = push -u origin master

	# undo commit
	undo = reset HEAD~

[log]
	date = relative

[format]
	pretty = format:%C(yellow)%h%C(reset) | %C(cyan)%>(14)%ad%C(reset) | %C(green)%<(8,trunc)%aN%C(reset) |%C(red)%d%C(reset) %s
