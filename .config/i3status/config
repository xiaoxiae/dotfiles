# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "battery all"
order += "volume master"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = " %essid (%ip)"
        format_down = ""
}

battery all {
        format = "%status %percentage (%remaining)"
	status_bat = ""
	status_chr = ""
	status_unk = ""
	low_threshold = 15
}

tztime local {
        format = " %Y-%m-%d (%H:%M:%S)"
}

load {
        format = " %1min"
}

disk "/" {
        prefix_type = decimal
	format = " %free"
}

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
